# ⚙️ Configuración Base
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# 🔑 Autenticación (opcional para endpoints protegidos)
JWT_SECRET=tu_super_secreto_jwt
JWT_EXPIRES_IN=24h

# 📦 AWS S3 (Almacenamiento de PDFs)
AWS_ACCESS_KEY_ID=tu_access_key_id
AWS_SECRET_ACCESS_KEY=tu_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=tu-bucket-de-cvs

# 🚀 BullMQ (Sistema de Colas con Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_password_redis

# 🌐 Webhooks (Notificaciones cuando el PDF esté listo)
WEBHOOK_URL=https://tudominio.com/webhook-receiver
WEBHOOK_SECRET=tu_secreto_webhook

# 📧 SMTP (Opcional para enviar PDFs por correo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_email
SMTP_FROM_NAME="CV Generator API"